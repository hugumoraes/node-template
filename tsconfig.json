{
  "compilerOptions": {
    "baseUrl": ".", // Root of the project
    "paths": {
      "_*": ["src/*"],
    },
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}